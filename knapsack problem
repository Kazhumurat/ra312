#include <stdio.h>

int max(int a , int b)
{
     //base case
  return (a>b)?a:b ;
}

int knapsack(int W, int val[], int wt[], int n)
{
  
  if(n == 0 || W == 0)
     return 0;

  if(wt[n-1] > W)
     knapsack(W, val, wt, n-1);
  else 
  {
      return max(val[n-1]+knapsack(W-wt[n-1], val, wt, n-1)),
                            knapsack( W, val, wt,  n-1));
  }
}

int main() 
{
   int val[] = {50, 60, 70};
   int wt[] = {3, 4, 3};
   int  W = 6;

  int n = sizeof(val)/sizeof(val[0]);

  printf("Result: %d\n", knapsack(W, val, wt, n));

  return 0;
}
